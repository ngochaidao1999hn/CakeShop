@model LoginInfo;
@using CakeShop.Dtos.UserDtos;
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
    RegisterInfo registerform = null;
    if (ViewBag.RegisterForm == null)
    {
        registerform = new RegisterInfo();
    }
    else {
        registerform = ViewBag.RegisterForm as RegisterInfo;
    }
}
<section class="banner_area">
    <div class="container">
        <div class="banner_text">
            <h3>Login</h3>
            <ul>
                <li><a href="index.html">Home</a></li>
                <li><a href="shop.html">Login</a></li>
            </ul>
        </div>
    </div>
</section>
<section class="contact_form_area p_100">
    <div class="container pt-5">
        <div class="row">
            <div class="col-lg-5">
                <div class="main_title">
                    <h2>Login</h2>
                </div>
                <form class="row contact_us_form" asp-controller="User" asp-action="Login" method="post" id="contactForm" novalidate="novalidate">
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" id="username" asp-for="@Model.UserName" name="UserName"  placeholder="Your Username" required>
                    </div>
                    <div class="form-group col-md-12 ">
                        <input type="password" class="form-control" id="password" asp-for="@Model.Password" name="Password"  placeholder="Your Password" required>
                    </div>
                    <div class="form-group col-md-12 ">
                        <div class="row"><input type="checkbox" class="form-control" id="Remember" asp-for="@Model.RememberMe"  name="RememberMe"><span id="remember_label">Remember me</span> </div>
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" value="submit" class="btn order_s_btn form-control">Login</button>
                    </div>
                    <div class="form-group col-md-12">
                       <span style="color:red">@ViewBag.Error</span>
                    </div>
                </form>
            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-lg-6">
                <div class="main_title">
                    <h2>Register</h2>
                </div>
                <form class="row contact_us_form" asp-action="Register" asp-controller="User" method="post" id="registrationform" >
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" id="name" asp-for="@registerform.FirstName" placeholder="Your first name" required autocomplete="off">
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" id="name" asp-for="@registerform.LastName" placeholder="Your last name" required autocomplete="off">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="email" class="form-control" id="email" asp-for="@registerform.Email" placeholder="Email address" required autocomplete="off">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" id="adress" asp-for="@registerform.Adress" placeholder="Your adress" required autocomplete="off">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="date" class="form-control" id="dob" asp-for="@registerform.Dob" placeholder="Your BirthDay" required autocomplete="off">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" id="phone" asp-for="@registerform.PhoneNumber" placeholder="Your Phone number" required autocomplete="off">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" id="username" asp-for="@registerform.UserName" placeholder="Your UserName" required autocomplete="off">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="password" class="form-control" id="password" asp-for="@registerform.Password" placeholder="Your Password" required>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="password" class="form-control" id="confirm" asp-for="@registerform.ConfirmPassword" placeholder="Confirm your password" required>
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" value="submit" class="btn order_s_btn form-control">Register</button>
                    </div>
                    <span style="color:red;">@ViewBag.ErrorRegister</span>
                </form>
            </div>

        </div>
        </div>
</section>
<!--/form-->
