@model LoginInfo;
@using CakeShop.Dtos.UserDtos;
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<section class="banner_area">
    <div class="container">
        <div class="banner_text">
            <h3>Login</h3>
            <ul>
                <li><a href="index.html">Home</a></li>
                <li><a href="shop.html">Login</a></li>
            </ul>
        </div>
    </div>
</section>
<section class="contact_form_area p_100">
    <div class="container pt-5">
        <div class="row">
            <div class="col-lg-5">
                <div class="main_title">
                    <h2>Login</h2>
                </div>
                <form class="row contact_us_form" asp-controller="User" asp-action="Login" method="post" id="contactForm" novalidate="novalidate">
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" id="username" asp-for="@Model.UserName" name="UserName"  placeholder="Your Username" required>
                    </div>
                    <div class="form-group col-md-12 ">
                        <input type="password" class="form-control" id="password" asp-for="@Model.Password" name="Password"  placeholder="Your Password" required>
                    </div>
                    <div class="form-group col-md-12 ">
                        <div class="row"><input type="checkbox" class="form-control" id="Remember" asp-for="@Model.RememberMe"  name="RememberMe"><span id="remember_label">Remember me</span> </div>
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" value="submit" class="btn order_s_btn form-control">Login</button>
                    </div>
                    <div class="form-group col-md-12">
                       <span style="color:red">@ViewBag.Error</span>
                    </div>
                </form>
            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-lg-6">
                <div class="main_title">
                    <h2>Register</h2>
                </div>
                <form class="row contact_us_form" action="http://galaxyanalytics.net/demos/cake/theme/cake-html/contact_process.php" method="post" id="contactForm" novalidate="novalidate">
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" id="name" name="FirstName" placeholder="Your first name">
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" id="name" name="Last Name" placeholder="Your last name">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="email" class="form-control" id="email" name="Email" placeholder="Email address">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" id="adress" name="Adress" placeholder="Your adress">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="date" class="form-control" id="dob" name="Dob" placeholder="Your BirthDay">
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" value="submit" class="btn order_s_btn form-control">Register</button>
                    </div>
                </form>
            </div>

        </div>
        </div>
</section>
<!--/form-->
